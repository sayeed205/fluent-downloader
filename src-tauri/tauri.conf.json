{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "pnpm build",
        "beforeDevCommand": "pnpm dev",
        "devPath": "http://localhost:3000",
        "distDir": "../out"
    },
    "package": {
        "productName": "Fluent Downloader",
        "version": "../package.json"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "window": {
                "all": false,
                "close": true,
                "hide": true,
                "show": true,
                "maximize": true,
                "minimize": true,
                "unmaximize": true,
                "unminimize": true,
                "startDragging": true
            }
        },
        "bundle": {
            "active": true,
            "category": "Productivity",
            "copyright": "",
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.hitarashi.fluent-downloader",
            "longDescription": "A simple download manager for Windows 11",
            "resources": [],
            "shortDescription": "Fluent Downloader",
            "targets": "msi",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Fluent Downloader",
                "width": 1400,
                "height": 700,
                "visible": true,
                "transparent": true,
                "center": true,
                "decorations": false
            }
        ]
    }
}
